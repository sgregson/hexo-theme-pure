.social-link
  if config.social.weibo
    a(href="http://weibo.com/" + (config.social.weibo) target="_blank")
      i.icon-weibo
      span.a11y Visit me on Weibo
  if config.social.github
    a(href="https://github.com/" + (config.social.github) target="_blank")
      i.icon-github-alt
      span.a11y View my code on GitHub
  if config.social.behance
    a(href="https://www.behance.net/" + (config.social.behance) target="_blank")
      i.icon-behance
      span.a11y View my portfolio on Behance
  if config.social.linkedin
    a(href="https://www.linkedin.com/in/" + (config.social.linkedin) target="_blank")
      i.icon-linkedin
      span.a11y View my profession on LinkedIn
  if config.social.gplus
    a(href="https://plus.google.com/" + (config.social.gplus) target="_blank")
      i.icon-gplus
      span.a11y Find me on Google Plus
  if config.social.twitter
    a(href="https://twitter.com/" + (config.social.twitter) target="_blank")
      i.icon-twitter
      span.a11y Read my twitter ramblings
